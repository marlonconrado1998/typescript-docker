{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "sourceMap": false,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "src/*"
            ],
            "@controllers/*": [
                "src/controllers/*"
            ],
            "@interfaces/*": [
                "src/interfaces/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
}